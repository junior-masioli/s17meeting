<div {{attributes}}>
	<div class="meeting" x-data="$store.getContent">
		<div class="meeting__sidebar">
			<div class="meeting__sidebar__left">
				<div class="meeting__sidebar__left--video" x-init="$store.getContent.getVideoUrl()">
