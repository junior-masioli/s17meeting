					</template>
					<template x-if="menuSurvey">
						<li class="tab_survey" :class="{ 'active': tab === 'survey' || !menuPoll && !menuQuestion }" @click="displayTab('survey')">
							<svg width="25" height="25" viewbox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
